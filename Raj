<body>
  <h2>üîç Wallet Transaction Checker</h2>
  <input type="text" id="walletInput" placeholder="Enter Wallet Number" />
  <button onclick="searchWallet()">Search</button>

  <table id="resultTable" style="display:none;">
    <thead>
      <tr>
        <th>Trnx Time</th>
        <th>Trnx Code</th>
        <th>Trnx Name</th>
        <th>From Wallet</th>
        <th>To Wallet</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody id="tableBody"></tbody>
  </table>

  <script>
    const SHEET_ID = "YOUR_SHEET_ID"; // <-- ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ Google Sheet ID ‡¶¨‡¶∏‡¶æ‡¶®
    const SHEET_NAME = "Sheet1"; // ‡¶∂‡ßÄ‡¶ü‡ßá‡¶∞ ‡¶®‡¶æ‡¶Æ (‡¶™‡ßç‡¶∞‡ßü‡ßã‡¶ú‡¶®‡ßá ‡¶¨‡¶¶‡¶≤‡¶æ‡¶®)
    const API_URL = `https://opensheet.elk.sh/${SHEET_ID}/${SHEET_NAME}`;

    async function searchWallet() {
      const wallet = document.getElementById("walletInput").value.trim();
      const res = await fetch(API_URL);
      const data = await res.json();

      const filtered = data.filter(row =>
        row.FromWallet === wallet || row.ToWallet === wallet
      );

      const tableBody = document.getElementById("tableBody");
      tableBody.innerHTML = "";

      if (filtered.length === 0) {
        alert("No transactions found!");
        return;
      }

      document.getElementById("resultTable").style.display = "table";

      filtered.forEach(row => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${row.TrnxTime}</td>
          <td>${row.TrnxCode}</td>
          <td>${row.TrnxName}</td>
          <td>${row.FromWallet}</td>
          <td>${row.ToWallet}</td>
          <td>${row.Amount}</td>
        `;
        tableBody.appendChild(tr);
      });
    }
  </script>
</body>
